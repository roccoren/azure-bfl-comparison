# Azure Flux credentials
# Use the FULL Azure image generation endpoint URL from the Azure portal
AZURE_FLUX_ENDPOINT=https://aoai-wus3-resources.services.ai.azure.com/openai/deployments/FLUX.1-Kontext-pro/images/generations?api-version=2025-04-01-preview
AZURE_FLUX_API_KEY=replace-me
AZURE_FLUX_DEPLOYMENT=FLUX.1-Kontext-pro
AZURE_FLUX_API_VERSION=2025-04-01-preview
AZURE_FLUX_POLL_INTERVAL=2.0
AZURE_FLUX_MAX_POLL_ATTEMPTS=60

# Azure GPT-Image-1 credentials for cloth swap
# Set ENABLE_AZURE_GPT_IMAGE=true to use GPT-Image-1 for outfit transfer
ENABLE_AZURE_GPT_IMAGE=false
AZURE_GPT_IMAGE_ENDPOINT=https://your-resource.openai.azure.com
AZURE_GPT_IMAGE_API_KEY=replace-me
AZURE_GPT_IMAGE_DEPLOYMENT=gpt-image-1
AZURE_GPT_IMAGE_API_VERSION=2024-12-01-preview
AZURE_GPT_IMAGE_POLL_INTERVAL=2.0
AZURE_GPT_IMAGE_MAX_POLL_ATTEMPTS=60

# Azure GPT-4o credentials for clothing analysis and orientation detection
AZURE_GPT_ENDPOINT=https://your-resource.openai.azure.com
AZURE_GPT_API_KEY=replace-me
AZURE_GPT_DEPLOYMENT=gpt-4o-mini
AZURE_GPT_API_VERSION=2024-02-15-preview

# DeepLab segmentation model path (optional)
DEEPLAB_ONNX_PATH=models/deeplab-mobilenetv2.onnx

# BFL Flux credentials
BFL_FLUX_API_URL=https://api.bfl.ai/v1/images
BFL_FLUX_API_KEY=replace-me
# Set to false to skip BFL calls and only use Azure Flux
ENABLE_BFL_FLUX=true

# Output settings
OUTPUT_ROOT_DIR=output
OUTPUT_INCLUDE_METADATA=true